<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical" android:gravity="center" android:paddingTop="5dip">
     <RelativeLayout style="@style/TupleDetailButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/SelectTupleLayout">
         <TextView android:id="@+id/SelectTupleLabel" android:textStyle="bold" android:textSize="10pt" android:layout_height="wrap_content" android:text="@string/select_tuple" android:gravity="center" android:layout_width="wrap_content" android:layout_centerInParent="true"></TextView>
         <ImageView android:src="@drawable/arrow" android:layout_width="wrap_content" android:id="@+id/arrow" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:padding="5dip"></ImageView>
     </RelativeLayout>
         
 </LinearLayout>