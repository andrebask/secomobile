<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/IndicatorLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/indicator_background"
	android:padding="10dip" android:gravity="center" android:orientation="vertical">

	<TextView android:id="@+id/IndicatorText" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textSize="15dip" 
		android:textStyle="bold"
		android:textColor="@drawable/indicator_color" />
</LinearLayout>
